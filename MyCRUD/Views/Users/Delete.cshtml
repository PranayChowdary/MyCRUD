@model MyCRUD.Models.Users

@{
    ViewBag.Title = "Delete";
}
<h3>Are you sure you want to delete this user?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        @if (Model.FileData.Any(f => f.FileType == MyCRUD.Models.FileType.Avatar))
        {
            <dt>
                Picture
            </dt>

            <dd>
                <img src="~/File?id=@Model.FileData.First(f => f.FileType == MyCRUD.Models.FileType.Avatar).FileId" alt="avatar" class="img-rounded" height="100" width="100" />
            </dd>
        }

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            Email Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.emailID)
        </dd>

        <dt>
            Phone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phoneNumber)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
